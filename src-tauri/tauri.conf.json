{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "translit",
  "mainBinaryName": "translit",
  "version": "0.1.2",
  "identifier": "com.translit.appx",
  "plugins": {},
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "translit",
        "width": 600,
        "height": 800,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "useHttpsScheme": true,
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}